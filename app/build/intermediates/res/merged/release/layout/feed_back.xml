<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.test.foodzone.FeedBack"
    android:background="@drawable/orange" >
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Feedback"
        android:textSize="40dip"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dip"
        android:layout_below="@id/textView1" />

    <EditText
        android:id="@+id/txt_emp_no"
        android:layout_width="wrap_content"
        android:layout_height="35dip"
        android:layout_below="@+id/rating_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#D8D8D8"
        android:hint="  Employee No."
        android:ems="10" />

    <EditText
        android:id="@+id/txt_msg"
        android:layout_width="wrap_content"
        android:layout_height="80dip"
        android:layout_alignLeft="@+id/txt_emp_no"
        android:layout_below="@+id/txt_emp_no"
        android:layout_marginTop="18dp"
        android:background="#D8D8D8"
        android:ems="10"
        android:hint="  Message"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_below="@+id/txt_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@drawable/submit_buton" />
    
</RelativeLayout><!-- From: file:/C:/Users/pramo_000/StudioProjects/WTFnew2/app/src/main/res/layout/feed_back.xml -->